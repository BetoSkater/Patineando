<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Registro">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_happy" />

    <TextView
        android:id="@+id/lblNombreRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblNombreRegistro" />

    <EditText
        android:id="@+id/txtNombreRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lblApellidosRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblApellidosRegistro" />

    <EditText
        android:id="@+id/txtApellidosRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lblApodoRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblApodoRegistro" />

    <EditText
        android:id="@+id/txtApodoRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lblCorreoRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblCorreoRegistro" />

    <EditText
        android:id="@+id/txtCorreoRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/lblConfirmarCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblConfirmarCorreoRegistro" />

    <EditText
        android:id="@+id/txtConfirmarCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/lblContrasenaRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblContraseÃ±aRegistro" />

    <EditText
        android:id="@+id/txtContrasenaRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnRegistrarRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnRegistrarRegistro" />
</LinearLayout>