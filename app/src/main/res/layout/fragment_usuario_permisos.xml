<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsND.FragmentUsuarioPermisos">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgImagenFraUsuarioPermisos"
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:src="@drawable/ic_menu_happy" />

                <TextView
                    android:id="@+id/lblEtiquetaNombreFraUsuarioPermisos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/etiqueta_nombre_fragmento_usuario_permisos" />

                <TextView
                    android:id="@+id/txtNombreFraUsuarioPermisos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lblEtiquetaCorreoFraUsuarioPermisos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/etiqueta_correo_fragmento_usuario_permisos" />

                <TextView
                    android:id="@+id/txtCorreoFraUsuarioPermisos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lblEtiquetaTipoUsuarioFraUsuarioPermisos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/etiqueta_tipo_usuario_fragmento_usuario_permisos" />

                <TextView
                    android:id="@+id/txtTipoUsuarioFraUsuarioPermisos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/lblCambiarUsuarioPermisos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/etiqueta_cambiar_fragmento_usuario_permisos" />

        <Spinner
            android:id="@+id/sprDesplegablePermisos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="200dp" />

        <Button
            android:id="@+id/btnGuardarCambiosUsuarioPermisos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_guardar_cambios_usuario_permisos" />
    </LinearLayout>
</FrameLayout>